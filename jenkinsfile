pipeline {
    agent {
        label 'skopeo'
    }
    environment {
        SONARQUBE_URL = 'sonar.sonarqube.svc.cluster.local:9000'
        SONARQUBE_TOKEN = credentials('sonar')
        GIT_REPO = 'github.com/carmensyva/spring-petclinic.git'
        BRANCH_NAME = 'main'
    }
    stages {
        stage('Git Clone') {
            steps {
                script {
                    sh "git config --global http.sslVerify false"
                    withCredentials([usernamePassword(credentialsId: 'cred', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                        sh """
                            git clone ${GIT_REPO} source
                            cd source
                            git remote set-url origin https://${USERNAME}:${PASSWORD}@github.com/carmensyva/spring-petclinic.git
                        """
                    }
                }
            }
        }
        stage('Build with Maven') {
            steps {
                dir('source') {
                    script {
                        sh """
                            git fetch
                            git checkout ${BRANCH_NAME}
                        """
                        withMaven(maven: 'Maven 3') {
                            sh 'mvn clean deploy'
                        }
                    }
                }
            }
        }
        stage('SonarQube Analysis') {
            steps {
                dir('source') {
                    script {
                        sh """
                        mvn sonar:sonar \
                            -Dsonar.host.url=${SONARQUBE_URL} \
                            -Dsonar.login=${SONARQUBE_TOKEN} \
                            -Dsonar.projectKey=test
                        """
                    }
                }
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}
